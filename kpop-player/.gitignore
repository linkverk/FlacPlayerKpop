# ========================================
# Next.js / Frontend .gitignore
# ========================================

# ========================================
# Dependencies
# ========================================
node_modules/
/.pnp
.pnp.js
.yarn/cache
.yarn/unplugged
.yarn/install-state.gz

# ========================================
# Testing
# ========================================
/coverage
.nyc_output/
/test-results/
/playwright-report/
/playwright/.cache/

# ========================================
# Next.js Build Output
# ========================================
/.next/
/out/
/.next/cache/
next-env.d.ts

# ========================================
# Production Build
# ========================================
/build
/dist

# ========================================
# Environment Variables
# ========================================
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Keep example
!.env.example

# ========================================
# Vercel
# ========================================
.vercel

# ========================================
# TypeScript
# ========================================
*.tsbuildinfo
tsconfig.tsbuildinfo

# ========================================
# Debug Logs
# ========================================
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
lerna-debug.log*

# ========================================
# OS Files
# ========================================
.DS_Store
.DS_Store?
*.pem
Thumbs.db
desktop.ini

# ========================================
# IDE / Editor
# ========================================
.vscode/
.idea/
*.swp
*.swo
*~

# Keep VS Code config
!.vscode/settings.json
!.vscode/extensions.json
!.vscode/launch.json

# ========================================
# Music Files (IMPORTANT!)
# ========================================
# Uncomment if you DON'T want to commit music
/public/music/*.flac
/public/music/*.mp3
/public/music/*.wav
/public/music/*.ogg
/public/music/*.m4a

# Or ignore entire music directory except .gitkeep
/public/music/*
!/public/music/.gitkeep

# ========================================
# Temporary Files
# ========================================
*.tmp
*.temp
*.cache

# ========================================
# Storybook
# ========================================
storybook-static/

# ========================================
# Turbo
# ========================================
.turbo/